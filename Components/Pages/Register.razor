@page "/register"

<h3 class="text-center mt-4">Student Registration</h3>

<EditForm Model="@student" OnValidSubmit="HandleValidSubmit" class="container mt-5 w-50">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <div class="mb-3 row">
        <label for="firstName" class="col-sm-2 col-form-label">First Name:</label>
        <div class="col-sm-10">
            <InputText id="firstName" @bind-Value="student.FirstName" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="lastName" class="col-sm-2 col-form-label">Last Name:</label>
        <div class="col-sm-10">
            <InputText id="lastName" @bind-Value="student.LastName" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            <InputText id="email" @bind-Value="student.Email" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label for="password" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
            <InputText id="password" @bind-Value="student.Password" class="form-control" type="password" />
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</EditForm>

@if (isSubmitted)
{
    <div class="alert alert-success mt-4 text-center">
        Registration successful! Thank you for registering.
    </div>
}

@code {
    private Student student = new Student();
    private bool isSubmitted = false;

    private void HandleValidSubmit()
    {
        isSubmitted = true;
        // Handle the form submission as needed
    }

    private class Student
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string Email { get; set; }
        public string Password { get; set; }
    }
}
